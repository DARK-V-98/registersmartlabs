
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    // =================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // IMPORTANT: This function is temporarily modified for development.
    // It grants admin privileges to ANY signed-in user.
    // For production, revert this to check for a specific role or custom claim.
    function isAdmin() {
      return isSignedIn();
    }

    // Collection Rules
    // ================

    /**
     * @description User profile data. Users can read/update their own profile. Admins can read any profile.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Allow admins to list users
      allow create: if isOwner(userId) && request.resource.data.role == 'user';
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    /**
     * @description Course information, publicly readable.
     * @path /courses/{courseId}
     */
    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description Centralized bookings. Users create their own bookings with a 'pending' status.
     * Admins can manage all bookings. Users can cancel their own bookings.
     * @path /bookings/{bookingId}
     */
    match /bookings/{bookingId} {
      allow get: if isAdmin() || isOwner(resource.data.userId);
      
      // Temporarily allow any signed-in user to list all bookings for admin functionality
      allow list: if isSignedIn();
      
      // Allow user to create their own booking, status must be pending
      allow create: if isOwner(request.resource.data.userId) && request.resource.data.status == 'pending';
      
      // Allow admin to update any booking.
      // Allow user to update their own booking ONLY if they are cancelling it.
      allow update: if isAdmin() || (isOwner(resource.data.userId) && request.resource.data.status == 'cancelled' && resource.data.status != 'cancelled');

      allow delete: if isAdmin();
    }

    /**
     * @description Global admin settings. Readable by all signed-in users, writable only by admins.
     * @path /settings/admin
     */
    match /settings/admin {
      allow get: if isSignedIn();
      allow create, update: if isAdmin();
      allow delete: if false;
    }

    /**
     * @description Denormalized daily schedules for checking availability.
     * Readable by any signed-in user, but only writable by admins.
     * @path /schedules/{date}
     */
    match /schedules/{date} {
      allow get: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
  }
}
